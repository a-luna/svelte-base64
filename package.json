{
  "name": "svelte-base64",
  "version": "1.0.0",
  "description": "This is a simple application that encodes/decodes ASCII text or hex strings to/from base64 and provides reactive UI components to help illustrate the encoding process.",
  "keywords": [
    "base64",
    "svelte",
    "responsive"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.8.7",
    "@babel/runtime": "^7.8.7",
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/svelte": "^1.11.2",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "bulma": "^0.8.0",
    "cssnano": "^4.1.10",
    "cypress": "3.8.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.27",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "svelma": "^0.3.2",
    "svelte": "^3.20.1",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.5.0"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{svelte,html,yml,json,css}": [
      "prettier --write"
    ]
  }
}
